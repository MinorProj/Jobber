<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    tools:context="comorgsminorproj.httpsgithub.jobber.AddJobs">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/designation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/designation"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="Designation : "
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <AutoCompleteTextView
        android:id="@+id/designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginTop="105dp"
        android:dropDownHeight="wrap_content"
        android:dropDownWidth="match_parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_toEndOf="@+id/textView11"
        android:layout_toRightOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designation : "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBottom="@+id/designation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignTop="@+id/designation" />

    <Button
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_id"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/type"
        android:layout_alignRight="@+id/t"
        android:layout_alignEnd="@+id/t"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <TextView
        android:id="@+id/salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="32dp"
        android:text="Salary : "
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/salary_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/salary"
        android:layout_alignBottom="@+id/salary"
        android:ems="10"
        android:inputType="number"
        android:layout_toRightOf="@+id/textView12"
        android:layout_alignRight="@+id/designation"
        android:layout_alignEnd="@+id/designation" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/salary"
        android:layout_alignStart="@+id/salary"
        android:layout_below="@+id/salary_id"
        android:layout_marginTop="19dp"
        android:text="Type : "
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Spinner
        android:id="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/salary_id"
        android:layout_alignLeft="@+id/salary_id"
        android:layout_alignRight="@+id/salary_id"
        android:layout_alignStart="@+id/salary_id"
        android:layout_alignTop="@+id/type" />

    <Button
        android:id="@+id/add"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/type"
        android:layout_alignStart="@+id/type"
        android:layout_alignTop="@+id/location_id"
        android:layout_marginTop="14dp"
        android:text="Choose:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/type"
        android:layout_alignRight="@+id/type"
        android:layout_below="@+id/location_id"
        android:layout_marginTop="33dp"
        android:id="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/textView7"
        android:text="Qualification:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Spinner
        android:id="@+id/qualification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/t"
        android:layout_alignLeft="@+id/t"
        android:layout_alignRight="@+id/t"
        android:layout_alignStart="@+id/t"
        android:layout_alignTop="@+id/textView8" />


</RelativeLayout>
